pipeline {
    agent any
    tools {
        maven "Maven"   
    }   
  
    stages {
        stage('Compile-Build-Test ') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('SonarQube Analysis'){
            steps{
               withSonarQubeEnv('sonarqube'){
                     sh 'mvn sonar:sonar'
                }
            }
        }
	
	stage('Deploy'){
		steps{
			deploy adapters: [tomcat9(credentialsId: 'tomcat', path: '', url: 'http://3.19.65.223:8990/')], contextPath: 'jarvis', onFailure: false, war: '**/*.war'
			}
		}
      }
	}
